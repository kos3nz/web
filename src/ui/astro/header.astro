---
import Drawer from "@/ui/solid/drawer.tsx"
import Logo from "@/ui/solid/logo.tsx"
import Navbar from "@/ui/solid/nav-bar.tsx"
import Navigation from "@/ui/solid/navigation.tsx"

const pathname = Astro.url.pathname
---

<div class="fixed left-1/2 top-0 z-50 mt-3 w-full max-w-6xl -translate-x-1/2 px-6">
  <Navbar>
    <a href="/" aria-label="Home" class="p-1">
      <Logo class="h-[31.5px] w-[14px] text-slate-200" />
    </a>

    <nav class="flex items-center justify-end">
      <div class="hidden md:block">
        <Navigation pathname={pathname} client:visible />
      </div>
      <div class="block md:hidden">
        <Drawer client:visible />
      </div>
    </nav>
  </Navbar>
</div>
