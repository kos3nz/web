---
import Logo from 'ui/solidjs/logo.tsx'
import Drawer from 'ui/solidjs/drawer.tsx'
import Navigation from 'ui/solidjs/navigation.tsx'
import Header from 'ui/solidjs/header.tsx'

const pathname = Astro.url.pathname
---

<Header client:load>
  <a href="/" aria-label="Home" class="p-1">
    <Logo />
  </a>

  <nav class="flex flex-1 items-center justify-end">
    <div class="hidden sm:block">
      <Navigation pathname={pathname} client:visible />
    </div>
    <div class="block sm:hidden">
      <Drawer client:visible />
    </div>
  </nav>
</Header>
