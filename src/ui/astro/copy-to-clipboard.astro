---
interface Props {
  text?: string
}

const { text } = Astro.props
---

<astro-copy-btn data-text={text}
  ><span
    class="invisible absolute -top-6 right-[-16px] rounded-lg bg-slate-200 px-1.5 py-[3px] text-xs font-bold text-slate-900 opacity-0 transition duration-300"
    >Copied!</span
  ><button
    aria-label="Copy to clipboard"
    title="Copy to clipboard"
    class="group rounded-lg border border-slate-400/20 bg-[#222436] p-1"
    ><svg
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 24 24"
      stroke-width="1.5"
      stroke="currentColor"
      fill="none"
      stroke-linecap="round"
      stroke-linejoin="round"
      class="size-5 text-slate-500 transition-colors duration-300 group-hover:text-slate-100"
      ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
        d="M9 5h-2a2 2 0 0 0 -2 2v12a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-12a2 2 0 0 0 -2 -2h-2"
      ></path><rect x="9" y="3" width="6" height="4" rx="2"></rect><path d="M9 12h6"
      ></path><path d="M9 16h6"></path></svg
    ></button
  ></astro-copy-btn
><style>
  .copied {
    opacity: 1;
    transform: translateY(-8px);
  }
</style><script src="./scripts/copy-to-clipboard.ts"></script>
